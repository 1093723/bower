{
  "env": {
    "node": true,
    "mocha": true
  },
  "rules": {
    "no-bitwise": 0,
    "curly": 0,
    "eqeqeq": 0,
    "guard-for-in": 0,
    "no-use-before-define": 0,
    "no-caller": 2,
    "no-new": 2,
    "no-plusplus": 0,
    "no-undef": 2,
    "no-unused-vars": 0,
    "strict": 0,
    "semi": 0,
    "no-cond-assign": [
      2,
      "except-parens"
    ],
    "no-debugger": 0,
    "no-eq-null": 0,
    "no-eval": 0,
    "no-unused-expressions": 0,
    "block-scoped-var": 0,
    "no-iterator": 0,
    "no-loop-func": 2,
    "no-script-url": 0,
    "no-shadow": 0,
    "no-new-func": 2,
    "no-new-wrappers": 2,
    "no-invalid-this": 0,
    "space-before-blocks": 2,
    "space-before-function-paren": [2, {"anonymous": "always", "named": "never"}],
    "space-infix-ops": 2
  }
}
